<div class="container py-5">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    {{#each course}}
      <div class="col">
        <div
          class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden d-flex flex-column"
        >

          <!-- Ảnh cố định khung -->
          <div class="ratio ratio-16x9">
            <img
              src="{{this.image}}"
              class="object-fit-cover"
              alt="Course image"
            />
          </div>

          <!-- Nội dung -->
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text text-muted flex-grow-1">{{this.description}}</p>
            <a
              href="/course/{{this.slug}}"
              class="btn btn-outline-primary mt-auto w-100"
            >Xem chi tiết</a>
          </div>
        </div>
      </div>

    {{else}}
      <div
        class="d-flex justify-content-center align-items-center flex-column w-100 py-5"
        style="min-height: 300px;"
      >
        <div
          class="border border-2 border-dashed rounded-4 p-5 text-center"
          style="max-width: 500px;"
        >
          <i class="bi bi-emoji-frown display-1 text-secondary mb-3"></i>
          <h4 class="fw-bold mb-2">Không Có Dữ Liệu</h4>
          <p class="text-muted">Hiện chưa có khóa học nào được thêm vào.</p>
        </div>
      </div>
    {{/each}}
  </div>
</div>