<div class="mt-4">
  <div class="card mb-3" style="max-width: 700px; margin: auto;">
    <!-- Ảnh to ở trên -->
    <img
      src="{{course.image}}"
      class="card-img-top img-fluid"
      alt="Ảnh sản phẩm"
    />

    <!-- Nội dung ở dưới ảnh -->
    <div class="card-body">
      <h5 class="card-title">{{course.name}}</h5>
      <p class="card-text">
        <strong>Mô tả:</strong>
        {{course.description}}
      </p>
    </div>
  </div>
</div>